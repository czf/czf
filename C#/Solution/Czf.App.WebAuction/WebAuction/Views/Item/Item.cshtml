@model ItemViewModel
@{
	ViewBag.Title = Model.Item.Title;
	Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>@Model.Item.Title</h2>

@using (Html.BeginForm("SubmitBid",ControllerName.Item, FormMethod.Post, new {@class="form"}))
{
@Html.TextBoxFor(model=>model.Input.BidAmountSubmitted, new {})
@Html.HiddenFor(model=>model.Input.ItemId, new {value=Model.Input.ItemId})
<input type="submit" value="submit"/>
}

@{BidItem i = Model.Item as BidItem;}
@if(i != null)
{
	foreach(Bid b in i.ItemBids)
	{
		@b.BidUser.UserName @: :@b.Amount
	}
}